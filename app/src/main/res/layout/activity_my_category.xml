<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.arthas.learningcurve.widget.HeaderBar
        android:id="@+id/header_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:headerRightText="新增"
        app:headerTitle="我的分类"
        app:showBack="true" />

    <FrameLayout
        android:id="@+id/container"
        android:layout_marginTop="@dimen/common_margin_top_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.github.johnkil.print.PrintView
            android:layout_alignParentLeft="true"
            android:id="@+id/arrow_icon"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:iconText="@string/ic_keyboard_arrow_right"
            app:iconColor="@android:color/white"
            app:iconSize="20dp" />
</LinearLayout>
