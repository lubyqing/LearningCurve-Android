<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_height"
    android:layout_gravity="center"
    android:background="@drawable/border_top"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_tab_one"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="2dp"
        android:drawablePadding="2dp"
        android:drawableTop="@drawable/bottombar_home_selector"
        android:gravity="center"
        android:text="学习圈"
        android:textColor="@drawable/bottom_item_text_selector"
        android:textSize="@dimen/text_size_small" />

    <TextView
        android:id="@+id/tv_tab_two"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="2dp"
        android:drawablePadding="2dp"
        android:drawableTop="@drawable/bottombar_search_selector"
        android:gravity="center"
        android:text="发现"
        android:textColor="@drawable/bottom_item_text_selector"
        android:textSize="@dimen/text_size_small" />

    <ImageView
        android:id="@+id/iv_center_tab"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:src="@drawable/icon_customer_service"
        android:paddingBottom="5dp"
        />

    <TextView
        android:id="@+id/tv_tab_three"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="2dp"
        android:drawablePadding="2dp"
        android:drawableTop="@drawable/bottombar_msg_selector"
        android:gravity="center"
        android:text="消息"
        android:textColor="@drawable/bottom_item_text_selector"
        android:textSize="@dimen/text_size_small" />

    <TextView
        android:id="@+id/tv_tab_four"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="2dp"
        android:drawablePadding="2dp"
        android:drawableTop="@drawable/bottombar_set_selector"
        android:gravity="center"
        android:text="我的"
        android:textColor="@drawable/bottom_item_text_selector"
        android:textSize="@dimen/text_size_small" />


</LinearLayout>
