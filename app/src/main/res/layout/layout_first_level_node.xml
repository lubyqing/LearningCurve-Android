<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:minHeight="@dimen/node_first_level_height"
    android:paddingLeft="@dimen/common_padding"
    android:paddingRight="@dimen/common_padding"
    android:background="?android:attr/selectableItemBackground"
    android:layout_height="match_parent">


    <com.github.johnkil.print.PrintView
        android:id="@id/pv_node_icon"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:iconColor="@color/common_blue"
        app:iconSize="@dimen/node_first_level_icon_size" />

    <TextView
        android:id="@id/pv_node_text"
        android:layout_centerVertical="true"
        android:textSize="@dimen/text_size_large"
        android:textColor="@color/text_more_light_black"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/pv_node_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <com.github.johnkil.print.PrintView
        android:id="@id/pv_node_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/pv_node_delete"
        android:layout_marginRight="@dimen/common_margin"
        android:layout_centerVertical="true"
        app:iconColor="@color/common_blue"
        app:iconSize="26dp"
        app:iconText="@string/ic_add_circle"
        />
    <com.github.johnkil.print.PrintView
        android:id="@id/pv_node_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        app:iconColor="@color/common_blue"
        app:iconSize="26dp"
        app:iconText="@string/ic_delete"
        />

</RelativeLayout>
